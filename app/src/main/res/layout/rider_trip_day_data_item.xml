<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/tv_restaurant_name"
                style="@style/BlackPoppinsRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Golden Chicken" />


            <TextView
                android:id="@+id/tv_trips_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restaurant_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppins_regular"
                android:text="21:21"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restaurant_name"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/tv_trips_start_time"
                android:layout_toRightOf="@+id/tv_trips_start_time"
                android:fontFamily="@font/poppins_regular"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_trips_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restaurant_name"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/tv_div"
                android:layout_toRightOf="@+id/tv_div"
                android:fontFamily="@font/poppins_regular"
                android:text="21:40"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_div2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restaurant_name"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/tv_trips_end_time"
                android:layout_toRightOf="@+id/tv_trips_end_time"
                android:fontFamily="@font/poppins_regular"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_trip_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restaurant_name"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/tv_div2"
                android:layout_toRightOf="@+id/tv_div2"
                android:fontFamily="@font/poppins_regular"
                android:text="Tip"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_goto_day_detail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/nav_next" />

            <TextView
                android:id="@+id/tv_cost_per_trip"
                style="@style/BlackPoppinsRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/img_goto_day_detail"
                android:layout_toLeftOf="@+id/img_goto_day_detail"
                android:text="3.87" />

            <TextView
                android:id="@+id/currency"
                style="@style/BlackPoppinsRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/tv_cost_per_trip"
                android:layout_toLeftOf="@+id/tv_cost_per_trip"
                android:text="@string/curr_sign" />

        </RelativeLayout>

    </TableRow>

    <!-- used for strokes effect !-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E9EB" />

    </TableRow>
    <!-- used for strokes effect !-->

</TableLayout>