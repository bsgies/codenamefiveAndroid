<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F6"
    tools:context=".UIViews.PartnerOrderDetail">

    <!-- top app bar !-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="#4856"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stretchColumns="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Golden Chicken" />


                <TextView
                    android:id="@+id/tv_trips_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="21:21"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/tv_trips_start_time"
                    android:layout_toRightOf="@+id/tv_trips_start_time"
                    android:fontFamily="@font/poppins_regular"
                    android:text="-"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_trips_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/tv_div"
                    android:layout_toRightOf="@+id/tv_div"
                    android:fontFamily="@font/poppins_regular"
                    android:text="21:40"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_div2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@+id/tv_trips_end_time"
                    android:layout_toRightOf="@+id/tv_trips_end_time"
                    android:fontFamily="@font/poppins_regular"
                    android:text="-"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_trip_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/tv_div2"
                    android:layout_toRightOf="@+id/tv_div2"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Tip"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_meters_covered"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2.2 mi" />

            </RelativeLayout>

        </TableRow>

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tv_trip_fee"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/ordr_trip_fee" />

                <TextView
                    android:id="@+id/tv_trip_fees"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="$3.00" />

                <TextView
                    android:id="@+id/tv_surge_fee"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_trip_fee"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/order_surge_fee" />

                <TextView
                    android:id="@+id/tv_surge_fees"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_trip_fees"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="$0.70" />

                <TextView
                    android:id="@+id/tv_tip"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_surge_fee"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/order_tip" />

                <TextView
                    android:id="@+id/tv_tip_amount"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_surge_fees"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="$1.50" />

                <TextView
                    android:id="@+id/tv_adjustment"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tip"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/order_adjustment" />

                <TextView
                    android:id="@+id/tv_adjustment_amount"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tip_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="$0.30" />

            </RelativeLayout>

        </TableRow>

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_order_total"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/order_total"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_total_amount"
                    style="@style/BlackPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="$5.30"
                    android:textStyle="bold" />

            </RelativeLayout>
        </TableRow>

        <!-- used for strokes effect !-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E9EB" />

        </TableRow>
        <!-- used for strokes effect !-->

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>