<resources>
   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryDark">#12D2B3</item>
      <item name="colorAccent">@color/colorAccent</item>

   </style>

   <style name="BlackPoppinsRegular">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/poppins_regular</item>
      <item name="android:textSize">16sp</item>
   </style>

   <style name="TextMediumBlack">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/helvetica_neue_medium</item>
      <item name="android:textSize">22sp</item>
   </style>

   <style name="TextEsmallGrey">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/helvetica_neue_regular</item>
      <item name="android:textSize">16sp</item>
      <item name="hintTextColor">#90949C</item>
   </style>

   <style name="TextEsmallBlack">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/helvetica_neue_regular</item>
      <item name="android:textSize">16sp</item>
   </style>

   <style name="TextLargeBlack">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/poppins_regular</item>
      <item name="android:textSize">22sp</item>
   </style>

   <style name="TextSmallBlack">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:fontFamily">@font/helvetica_neue_medium</item>
      <item name="android:textSize">18sp</item>
   </style>

   <style name="TextSmallGrey">
      <item name="android:textColor">@android:color/darker_gray</item>
      <item name="android:fontFamily">@font/helvetica_neue_medium</item>
      <item name="android:textSize">18sp</item>
   </style>

   <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
      <item name="android:textSize" >16sp</item>
      <item name="android:fontFamily" >@font/helvetica_neue_medium</item>
      <item name="android:textColor" >@android:color/darker_gray</item>
   </style>

   <style name="SpinnerCalendar">
      <item name="android:calendarViewShown">false</item>
      <item name="android:datePickerMode">spinner</item>
   </style>

   <style name="dialogTextBlack">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@android:color/black</item>
      <item name="fontFamily">@font/helvetica_neue_medium</item>
   </style>

   <style name="dialogTextGrey">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@android:color/darker_gray</item>
      <item name="fontFamily">@font/helvetica_neue_medium</item>
   </style>

   <style name="TIL_style">
      <item name="android:textColor">@android:color/black</item>
      <item name="errorTextColor">@color/redErrorColor</item>
      <item name="hintTextColor">@android:color/darker_gray</item>
      <item name="backgroundTint">@color/appThemeColor</item>
      <item name="fontFamily">@font/helvetica_neue_medium</item>
      <item name="android:textSize">16sp</item>

   </style>

   <style name="LightTextBlack_Large">
      <item name="fontFamily">@font/helvetica_neue_regular</item>
      <item name="android:textColor">@android:color/black</item>
      <item name="android:textSize">16sp</item>
   </style>

   <style name="LightTextGrey_Small">
      <item name="fontFamily">@font/helvetica_neue_regular</item>
      <item name="android:textColor">@android:color/darker_gray</item>
      <item name="android:textSize">14sp</item>
   </style>

</resources>